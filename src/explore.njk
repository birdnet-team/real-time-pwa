permalink: "/explore/"
---

<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">Local Species</h1>
    <button
      id="settingsToggle"
      class="btn btn-outline-secondary"
      type="button"
      aria-expanded="false"
      aria-controls="settingsDrawer"
      aria-label="Toggle settings"
    >
      <i class="bi bi-gear-fill"></i> Settings
    </button>
  </div>

  <div class="card mb-4">
    <div class="card-body bg-light">
      <div class="d-flex align-items-center gap-3">
        <i class="bi bi-geo-alt-fill text-primary fs-4"></i>
        <div>
          <div id="geoStatusText" class="fw-semibold">Initializing...</div>
          <div id="geoCoordsText" class="small text-muted">—</div>
        </div>
      </div>
    </div>
  </div>

  <div id="exploreList" class="row g-3">
    <div class="col-12 text-center py-5 text-muted">
      <div class="spinner-border mb-3" role="status"></div>
      <p>Loading model and species list...</p>
    </div>
  </div>
</div>

<!-- Include Settings Drawer (reused structure) -->
<div id="settingsOverlay" class="settings-overlay" aria-hidden="true"></div>
<aside id="settingsDrawer" class="settings-drawer" aria-hidden="true">
  <div class="settings-header d-flex justify-content-between align-items-center mb-4">
    <h5 class="m-0">Settings</h5>
    <button type="button" class="btn-close" id="settingsClose" aria-label="Close"></button>
  </div>
  
  <div class="settings-drawer-body">
    <h6 class="text-uppercase text-muted fw-bold mb-3">Geomodel</h6>
    <div class="mb-3 p-3 bg-light rounded-3">
      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="geoToggle" checked>
        <label class="form-check-label fw-semibold" for="geoToggle">Use geolocation</label>
      </div>
      
      <div class="mt-3 pt-3 border-top">
        <label for="geoThresholdRange" class="form-label small text-muted">Occurrence Threshold</label>
        <input type="range" class="form-range" id="geoThresholdRange" min="1" max="25" step="1">
        <div class="form-text small">
          Show species with ≥ <span class="form-range-value" id="geoThresholdValue">5%</span> probability
        </div>
      </div>
    </div>

    <div class="mb-3">
      <label for="labelLangSelect" class="form-label">Label language</label>
      <select id="labelLangSelect" class="form-select"></select>
    </div>
  </div>
</aside>