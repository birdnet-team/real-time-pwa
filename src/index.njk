permalink: "/"
---

<section class="py-0">
  <div class="spectrogram-full">
    <canvas id="liveSpectrogram" class="live-spectrogram-canvas"></canvas>
  </div>
</section>

<div class="container py-4">
  <!-- Header / Status Row -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div class="d-flex align-items-center gap-2">
      <div id="listeningIndicator" class="spinner-grow text-danger spinner-grow-sm d-none" role="status"></div>
      <span class="small text-muted" id="statusText">Tap 'Start' to record</span>
    </div>
    <button
      id="settingsToggle"
      class="btn btn-link text-secondary text-decoration-none p-0"
      type="button"
      aria-expanded="false"
      aria-controls="settingsDrawer"
      aria-label="Toggle settings"
    >
      <i class="bi bi-gear-fill fs-4"></i>
    </button>
  </div>

  <!-- Detections Grid -->
  <div id="detectionsList" class="row g-3">
    <div class="col-12 text-center text-muted py-5">
      <i class="bi bi-soundwave fs-1 d-block mb-3 opacity-25"></i>
      <p>Detections will appear here.</p>
    </div>
  </div>
</div>

<!-- Settings Drawer -->
<div id="settingsOverlay" class="settings-overlay" aria-hidden="true"></div>
<aside id="settingsDrawer" class="settings-drawer" aria-hidden="true">
  <div class="settings-header d-flex justify-content-between align-items-center mb-4">
    <h5 class="m-0">Settings</h5>
    <button type="button" class="btn-close" id="settingsClose" aria-label="Close"></button>
  </div>
  
  <div class="settings-drawer-body">
    
    <!-- Section: Detection -->
    <h6 class="text-uppercase text-muted fw-bold mb-3">Detection & Model</h6>
    
    <div class="mb-3 p-3 bg-light rounded-3">
      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="geoToggle" checked>
        <label class="form-check-label fw-semibold" for="geoToggle">Use geolocation</label>
      </div>
      <div class="geo-status mt-1" id="geoStatusText">Awaiting geolocation…</div>
      <div class="geo-status">
        Coordinates: <span class="fw-semibold" id="geoCoordsText">—</span>
      </div>
    </div>

    <div class="row g-3">
      <div class="col-12">
        <label for="labelLangSelect" class="form-label">Label language</label>
        <select id="labelLangSelect" class="form-select"></select>
      </div>
      <div class="col-6">
        <label for="thresholdRange" class="form-label">Threshold</label>
        <input type="range" class="form-range" id="thresholdRange" min="1" max="95" step="1">
        <div class="form-text small">
          ≥ <span class="form-range-value" id="thresholdValue">15%</span>
        </div>
      </div>
      <div class="col-6">
        <label for="inputGainRange" class="form-label">Mic Gain</label>
        <input type="range" class="form-range" id="inputGainRange" min="0.5" max="3.0" step="0.1">
        <div class="form-text small">
          <span class="form-range-value" id="inputGainValue">1.0×</span>
        </div>
      </div>
    </div>

    <hr class="my-4 opacity-25">

    <!-- Section: Spectrogram -->
    <h6 class="text-uppercase text-muted fw-bold mb-3">Spectrogram</h6>

    <div class="row g-3">
      <div class="col-6">
        <label for="durationRange" class="form-label">Duration</label>
        <input type="range" class="form-range" id="durationRange" min="5" max="60" step="1">
        <div class="form-text small">
          <span class="form-range-value" id="durationValue">20&nbsp;s</span>
        </div>
      </div>
      <div class="col-6">
        <label for="colormapSelect" class="form-label">Colormap</label>
        <select id="colormapSelect" class="form-select">
          <option value="viridis">Viridis</option>
          <option value="magma">Magma</option>
          <option value="inferno">Inferno</option>
          <option value="plasma">Plasma</option>
          <option value="turbo">Turbo</option>
          <option value="cubehelix">Cubehelix</option>
        </select>
      </div>

      <!-- Frequency Group -->
      <div class="col-12 mt-4">
        <label class="form-label fw-semibold mb-0">Frequency Range (Hz)</label>
      </div>
      <div class="col-6 mt-1">
        <label for="minFreqRange" class="form-label small text-muted">Min</label>
        <input type="range" class="form-range" id="minFreqRange" min="0" max="12000" step="100">
        <div class="form-text small"><span class="form-range-value" id="minFreqValue">0 Hz</span></div>
      </div>
      <div class="col-6 mt-1">
        <label for="maxFreqRange" class="form-label small text-muted">Max</label>
        <input type="range" class="form-range" id="maxFreqRange" min="1000" max="15000" step="100">
        <div class="form-text small"><span class="form-range-value" id="maxFreqValue">12000 Hz</span></div>
      </div>

      <!-- Amplitude Group -->
      <div class="col-12 mt-3">
        <label class="form-label fw-semibold mb-0">Amplitude Range (dB)</label>
      </div>
      <div class="col-6 mt-1">
        <label for="minDbRange" class="form-label small text-muted">Min (Floor)</label>
        <input type="range" class="form-range" id="minDbRange" min="-150" max="-50" step="5">
        <div class="form-text small"><span class="form-range-value" id="minDbValue">-120 dB</span></div>
      </div>
      <div class="col-6 mt-1">
        <label for="maxDbRange" class="form-label small text-muted">Max (Ceiling)</label>
        <input type="range" class="form-range" id="maxDbRange" min="-60" max="0" step="5">
        <div class="form-text small"><span class="form-range-value" id="maxDbValue">-40 dB</span></div>
      </div>
    </div>
    
    <div class="pb-5"></div> <!-- Spacer for bottom scroll -->
  </div>
</aside>

<button id="recordButton" class="record-btn btn btn-primary btn-lg rounded-pill shadow-sm">
  <span class="record-icon"></span>
  <span class="record-label d-inline-flex align-items-center gap-2">
    <i class="bi bi-mic-fill"></i>
    <span class="record-label-text">Start</span>
  </span>
</button>
