title: BirdNET Live – Real-time Bird Sound ID
layout: layouts/base.njk
permalink: "/"
---

<section class="py-0">
  <div class="spectrogram-full">
    <canvas id="liveSpectrogram" class="live-spectrogram-canvas"></canvas>
  </div>

  <div class="status-bar bg-dark border-bottom" role="status">
    <div class="container">
      <div class="d-flex align-items-center py-2">
        <button
          id="settingsToggle"
          class="btn btn-link p-0 text-light"
          type="button"
          aria-expanded="false"
          aria-controls="settingsDrawer"
          aria-label="Toggle settings"
        >
          <i class="bi bi-gear-fill fs-7"></i>
          <span class="visually-hidden">Open settings</span>
        </button>
        <p id="statusText" class="mb-0 ms-3 flex-grow-1">
          Tap “Listen” to start BirdNET Live. Please allow microphone access.
        </p>
      </div>
    </div>
  </div>

  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-8">
        <div class="card shadow-sm">
          <div class="card-body d-flex flex-column">
            <h2 class="h6 text-uppercase text-muted mb-2">Detections</h2>
            <div id="detectionsList" class="detections-list flex-grow-1"></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="settingsOverlay" class="settings-overlay" aria-hidden="true"></div>
  <aside id="settingsDrawer" class="settings-drawer" aria-hidden="true">
    <div class="settings-drawer-header d-flex justify-content-between align-items-center">
      <h2 class="h6 text-uppercase text-muted mb-0">Settings</h2>
      <button type="button" class="btn btn-link text-muted p-0" id="settingsClose" aria-label="Close settings">
        <i class="bi bi-x-lg"></i>
      </button>
    </div>
    <div class="settings-drawer-body">
      <div class="mb-4">
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" id="geoToggle" checked>
          <label class="form-check-label fw-semibold" for="geoToggle">Use geolocation</label>
        </div>
        <div class="geo-status" id="geoStatusText">Awaiting geolocation…</div>
        <div class="geo-status">
          Coordinates:
          <span class="fw-semibold" id="geoCoordsText">—</span>
        </div>
      </div>

      <div class="settings-grid">
        <div>
          <label for="labelLangSelect" class="form-label">Label language</label>
          <select id="labelLangSelect" class="form-select"></select>
          <div class="form-text">Reloads model labels.</div>
        </div>
        <div>
          <label for="thresholdRange" class="form-label">Detection threshold</label>
          <input type="range" class="form-range" id="thresholdRange" min="1" max="99" step="1">
          <div class="form-text">
            Showing confidence ≥ <span class="form-range-value" id="thresholdValue">25%</span>
          </div>
        </div>
        <div>
          <label for="durationRange" class="form-label">Spectrogram duration</label>
          <input type="range" class="form-range" id="durationRange" min="5" max="60" step="1">
          <div class="form-text">
            Showing <span class="form-range-value" id="durationValue">20&nbsp;s</span>
          </div>
        </div>
        <div>
          <label for="minFreqRange" class="form-label">Min frequency (Hz)</label>
          <input type="range" class="form-range" id="minFreqRange" min="0" max="12000" step="100">
          <div class="form-text">
            Min <span class="form-range-value" id="minFreqValue">0 Hz</span>
          </div>
        </div>
        <div>
          <label for="maxFreqRange" class="form-label">Max frequency (Hz)</label>
          <input type="range" class="form-range" id="maxFreqRange" min="1000" max="15000" step="100">
          <div class="form-text">
            Max <span class="form-range-value" id="maxFreqValue">12000 Hz</span>
          </div>
        </div>
        <div>
          <label for="colormapSelect" class="form-label">Spectrogram colormap</label>
          <select id="colormapSelect" class="form-select">
            <option value="viridis">Viridis</option>
            <option value="magma">Magma</option>
            <option value="inferno">Inferno</option>
            <option value="plasma">Plasma</option>
            <option value="turbo">Turbo</option>
            <option value="cubehelix">Cubehelix</option>
          </select>
          <div class="form-text">Color scale for intensity.</div>
        </div>        
        <div>
          <label for="inputGainRange" class="form-label">Input gain (model)</label>
          <input type="range" class="form-range" id="inputGainRange" min="0.5" max="3.0" step="0.1">
          <div class="form-text">
            Gain <span class="form-range-value" id="inputGainValue">1.0×</span>
          </div>
        </div>
      </div>
    </div>
  </aside>
</section>

<button id="recordButton" class="record-btn btn btn-primary btn-lg rounded-pill shadow-sm">
  <span class="record-icon"></span>
  <span class="record-label d-inline-flex align-items-center gap-2">
    <i class="bi bi-mic-fill"></i>
    <span class="record-label-text">Start</span>
  </span>
</button>
